{{! Partial for a single post }}
<div class="post">
    <div class="post-avatar">
        <!-- the user's avatar -->
        <img src="{{#if this.avatar_url}}
                    {{this.avatar_url}}
                {{else}}
                    /avatar/{{this.username}}
                {{/if}}"
                alt="Poster's Avatar"
                class="post-avatar-img">
    </div>
    <div class="post-content preserve-newlines">
        <!-- the post -->
        <h3>{{this.title}}</h3>
        <p>{{this.content}}</p>
        <hr>
        <div class="post-status-bar">
            <!-- everything that is shown in the status bar -->

            {{#if loggedIn}}
                {{#ifEq this.username user.username}}
                    <!-- font awesome  trashcan = <i class="fas fa-trash-alt"> </i>-->
                    <form action="/delete/{{this.id}}" method="POST">
                        <button type="submit" class="delete-button icon-button">
                            <i class="fas fa-trash-alt"></i>
                        </button>
                    </form>
                {{else}}
                    <!-- Heart = â™¥ -->
                    <form action="/like/{{this.id}}" method="POST">
                        <button type="submit" class="like-button icon-button">
                            <i class="fa-solid fa-heart"></i>
                        </button>
                    </form>
                {{/ifEq}}
            {{/if}}

            <span>{{this.likes}} Likes</span>
            <span>Posted by {{this.username}} on {{this.timestamp}}</span>
        </div>
    </div>
</div>
